<!-- Modal -->
<div
	class="modal fade"
	id="editAdminModal"
	tabindex="-1"
	aria-labelledby="editAdminModalLabel"
	aria-hidden="true"
>
	<div class="modal-dialog">
		<div class="modal-content p-7 pb-0 rounded-mini border-light-neutral">
			<div class="modal-header mb-7 border-bottom-0">
				<h2 class="modal-title fs-4 modal-lh-33" id="editAdminModalLabel">
					Edit Admin
				</h2>
				<button
					type="button"
					class="btn-close"
					data-bs-dismiss="modal"
					aria-label="Close"
				></button>
			</div>
			<div class="modal-body mb-9">
				<form action="." method="post">
					<div class="form-group border-bottom border-light-neutral mb-6">
						<h3 class="mb-4 fs-5 modal-lh-33">Account</h3>
						<div class="mb-4">
							<label
								for="name"
								class="form-label m-0 pb-1 fs-sm modal-lh-24 text-dark"
								>Name</label
							>
							<input
                                disabled
								type="text"
								class="form-control text-dark border-0 bg-light rounded-mini modal-lh-24 px-4"
								id="name"
                                value="Emir Wicks"
							/>
						</div>
						<div class="mb-6">
							<label
								for="editAdmin-email"
								class="form-label m-0 pb-1 fs-sm modal-lh-24 text-dark"
								>Email</label
							>
							<input
                                disabled
								class="form-control text-dark border-0 bg-light rounded-mini modal-lh-24 px-4"
								id="editAdmin-email"
                                value="emir.wicks@mail.com"
							/>
						</div>
					</div>
					<div class="form-group border-bottom border-light-neutral mb-6">
						<h3 class="mb-4 fs-5 modal-lh-33">Verification</h3>
                            <label
							for="send-verified-btn"
							class="send-verified-label modal-lh-33 fw-bold d-flex align-items-center mb-4"
							><span class="material-icons me-3 text-success">
								check_circle
							</span>
							Verified</label
						>
						<input
                            disabled
							type="button"
							value="Send Verification Mail"
							class="btn btn-outline-light-neutral w-100 text-light-neutral rounded-mini mb-7 modal-lh-33"
						/>
					</div>
					<div class="form-group border-bottom border-light-neutral mb-6">
						<h3 class="mb-4 fs-5 modal-lh-33">Access Level</h3>
						<select
							name="accessLevel"
							id="selectAccessLevel"
							class="w-100 d-block border-dark modal-lh-24 fs-6 text-dark rounded-mini mb-6 p-4"
						>
							<option class="text-secondary" value="" disabled>-Choose access level-</option>
							<option class="text-dark" value="Admin" selected>Admin</option>
							<option class="text-dark" value="Admin2">Admin2</option>
							<option class="text-dark" value="Admin3">Admin3</option>
							<option class="text-dark" value="Admin4">Admin4</option>
						</select>
					</div>
					<div class="form-group border-bottom border-light-neutral mb-6">
						<h3 class="mb-4 fs-5 modal-lh-33">Custom Access</h3>
						<div class="d-flex align-center mb-4">
							<input type="checkbox" id="Lecture" name="customAccess" class="me-3" /><label
								for="Lecture"
								class="text-dark"
								>Lecture</label
							>
						</div>
						<div class="d-flex align-center mb-4">
							<input type="checkbox" id="Coupon" name="customAccess"  class="me-3"/><label
								for="Coupon"
								class="text-dark"
								>Coupon</label
							>
						</div>
						<div class="d-flex align-center mb-4">
							<input type="checkbox" id="Message" name="customAccess" class="me-3" /><label
								for="Message"
								class="text-dark"
								>Message</label
							>
						</div>
						<div class="d-flex align-center mb-4">
							<input type="checkbox" id="Setting" name="customAccess" class="me-3" /><label
								for="Setting"
								class="text-dark"
								>Setting</label
							>
						</div>
						<div class="d-flex align-center mb-6">
							<input type="checkbox" id="Task Menu" name="customAccess" class="me-3"/><label
								for="Task Menu"
								class="text-dark"
								>Task Menu</label
							>
						</div>
					</div>
                    <div class="form-group">
                        <h3 class="mb-4 fs-5 modal-lh-33">Deactivate Account</h3>
                        <label
							for="send-verified-btn"
							class="send-verified-label mb-4 modal-lh-33 d-flex align-items-center text-danger"
							><span class="material-icons me-3 text-danger">
								warning
							</span>
							This cannot be undone!</label
						>
                        <input
							type="button"
							value="Deactivate This Account"
							class="btn btn-outline-danger w-100 rounded-mini modal-lh-33"
						/>
                    </div>
				</form>
			</div>
			<div class="modal-footer border-top-0 pt-0">
				<button
					type="button"
					class="btn btn-outline-success rounded-mini"
					data-bs-dismiss="modal"
				>
					Cancel
				</button>
				<button type="button" class="btn btn-success rounded-mini">Update</button>
			</div>
		</div>
	</div>
</div>
