<!-- Modal -->
<div
	class="modal fade"
	id="addAdminModal"
	tabindex="-1"
	aria-labelledby="addAdminModalLabel"
	aria-hidden="true"
>
	<div class="modal-dialog">
		<div class="modal-content p-7 pb-0 rounded-mini border-light-neutral">
			<div class="modal-header mb-7 border-bottom-0">
				<h2 class="modal-title fw-bold fs-4 modal-lh-33" id="addAdminModalLabel">
					New Admin
				</h2>
				<button
					type="button"
					class="btn-close"
					data-bs-dismiss="modal"
					aria-label="Close"
				></button>
			</div>
			<div class="modal-body mb-9">
				<form action="." method="get">
					<div class="form-group border-bottom border-light-neutral mb-6">
						<h3 class="mb-4 fs-5 modal-lh-33">Account</h3>
						<div class="mb-4">
							<label
								for="addAdmin-name"
								class="form-label m-0 pb-1 fs-sm modal-lh-24 text-dark"
								>Name</label
							>
							<input
								type="text"
								class="form-control text-dark border-dark rounded-mini"
								id="addAdmin-name"
							/>
						</div>
						<div class="mb-6">
							<label
								for="addAdmin-email"
								class="form-label m-0 pb-1 fs-sm modal-lh-24 text-dark"
								>Email</label
							>
							<input
								class="form-control text-dark border-dark rounded-mini"
								id="addAdmin-email"
							/>
						</div>
					</div>
					<div class="form-group border-bottom border-light-neutral mb-6">
						<h3 class="mb-4 fs-5 modal-lh-33">Verification</h3>
						<label
							for="send-verified-btn"
							class="send-verified-label mb-4 modal-lh-33 fw-bold d-flex align-items-center"
							><span class="material-icons me-3 text-danger">
								warning
							</span>
							Unverified</label
						>
						<input
							type="button"
							value="Send Verification Mail"
							class="btn btn-outline-light-neutral w-100 text-success rounded-mini mb-7 modal-lh-33"
						/>
					</div>
					<div class="form-group border-bottom border-light-neutral mb-6">
						<h3 class="mb-4 fs-5 modal-lh-33">Access Level</h3>
						<select
							name="accessLevel"
							id="selectAccessLevel"
							class="w-100 d-block border-dark modal-lh-24 fs-6 text-secondary rounded-mini mb-6 p-4"
						>
                        <option class="text-secondary" value="" disabled selected>-Choose access level-</option>
                        <option class="text-dark" value="Admin" >Admin</option>
                        <option class="text-dark" value="Admin2">Admin2</option>
                        <option class="text-dark" value="Admin3">Admin3</option>
                        <option class="text-dark" value="Admin4">Admin4</option>
						</select>
					</div>
					<div class="form-group">
						<h3 class="mb-4 fs-5 modal-lh-33">Custom Access</h3>
						<div class="d-flex align-center mb-4">
							<input type="checkbox" id="Lecture" name="customAccess" class="me-3" /><label
								for="Lecture"
								class="text-dark"
								>Lecture</label
							>
						</div>
						<div class="d-flex align-center mb-4">
							<input type="checkbox" id="Coupon" name="customAccess"  class="me-3"/><label
								for="Coupon"
								class="text-dark"
								>Coupon</label
							>
						</div>
						<div class="d-flex align-center mb-4">
							<input type="checkbox" id="Message" name="customAccess" class="me-3" /><label
								for="Message"
								class="text-dark"
								>Message</label
							>
						</div>
						<div class="d-flex align-center mb-4">
							<input type="checkbox" id="Setting" name="customAccess" class="me-3" /><label
								for="Setting"
								class="text-dark"
								>Setting</label
							>
						</div>
						<div class="d-flex align-center">
							<input type="checkbox" id="Task Menu" name="customAccess" class="me-3"/><label
								for="Task Menu"
								class="text-dark"
								>Task Menu</label
							>
						</div>
					</div>
                    
				</form>
			</div>
			<div class="modal-footer border-top-0 pt-0">
				<button
					type="button"
					class="btn btn-outline-success rounded-mini"
					data-bs-dismiss="modal"
				>
					Cancel
				</button>
				<button type="button" class="btn btn-success rounded-mini">Add</button>
			</div>
		</div>
	</div>
</div>
